        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">All Member</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">พนักงานทั้งหมด</li>
                    </ol>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="departmentFilter" class="form-label">
                                    Filter by Department:</label>
                                <select id="departmentFilter" class="form-select">
                                    <option value="">All Dept.</option>
                                    <% if (departments && departments.length> 0) { %>
                                        <% departments.forEach(function(dept) { %>
                                            <option value="<%= dept.dept_id %>">
                                                <%= dept.dept_name %>
                                            </option>
                                            <% }); %>
                                                <% } %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="roleFilter" class="form-label">
                                    Filter by Status:</label>
                                <select id="roleFilter" class="form-select">
                                    <option value="">All Status</option>
                                    <% if (roles && roles.length> 0) { %>
                                        <% roles.forEach(function(role) { %>
                                            <option value="<%= role.role_id %>">
                                                <%= role.role_name %>
                                            </option>
                                            <% }); %>
                                                <% } %>
                                </select>
                            </div>
                        </div>

                        <table id="memberTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Dept.</th>
                                    <th>Status</th>
                                    <th>การดำเนินการ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% members.forEach(function(member) { %>
                                    <tr>
                                        <td>
                                            <%= member.u_name %>
                                        </td>
                                        <td>
                                            <%= member.f_name %>
                                        </td>
                                        <td>
                                            <%= member.l_name %>
                                        </td>
                                        <td>
                                            <%= member.dept_name %>
                                        </td>
                                        <td>
                                            <%= member.role_name %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary edit-member"
                                                data-id="<%= member.u_id %>">แก้ไข</button>
                                            <button class="btn btn-sm btn-danger delete-member"
                                                data-id="<%= member.u_id %>">ลบ</button>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>


                    <!-- Modal สำหรับเพิ่มสมาชิกใหม่ -->
                    <div class="modal fade" id="addMemberModal" tabindex="-1" aria-labelledby="addMemberModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="addMemberModalLabel">เพิ่มสมาชิกใหม่</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="addMemberForm" action="/member_admin/add" method="POST">
                                        <div class="mb-3">
                                            <label for="username" class="form-label">ชื่อผู้ใช้</label>
                                            <input type="text" class="form-control" id="username" name="username"
                                                required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="password" class="form-label">รหัสผ่าน</label>
                                            <input type="password" class="form-control" id="password" name="password"
                                                required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="firstName" class="form-label">ชื่อ</label>
                                            <input type="text" class="form-control" id="firstName" name="firstName"
                                                required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="lastName" class="form-label">นามสกุล</label>
                                            <input type="text" class="form-control" id="lastName" name="lastName"
                                                required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="deptId" class="form-label">แผนก</label>
                                            <select class="form-select" id="deptId" name="deptId" required>
                                                <% departments.forEach(function(dept) { %>
                                                    <option value="<%= dept.dept_id %>">
                                                        <%= dept.dept_name %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="roleId" class="form-label">บทบาท</label>
                                            <select class="form-select" id="roleId" name="roleId" required>
                                                <!-- เพิ่มตัวเลือกบทบาทตามที่มีในระบบ -->
                                                <option value="1">ผู้ดูแลระบบ</option>
                                                <option value="2">ผู้ใช้งานทั่วไป</option>
                                                <option value="3">ช่างซ่อม</option>
                                                <option value="4">ผู้จัดการ</option>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-primary">บันทึก</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
        </div>
        </main>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const table = document.getElementById('memberTable');
            const departmentFilter = document.getElementById('departmentFilter');
            const roleFilter = document.getElementById('roleFilter');

            function filterTable() {
                const departmentValue = departmentFilter.value;
                const roleValue = roleFilter.value;

                for (let i = 1; i < table.rows.length; i++) {
                    const row = table.rows[i];
                    const departmentCell = row.cells[3];
                    const roleCell = row.cells[4];

                    const departmentMatch = !departmentValue || departmentCell.textContent.trim() === departmentFilter.options[departmentFilter.selectedIndex].text;
                    const roleMatch = !roleValue || roleCell.textContent.trim() === roleFilter.options[roleFilter.selectedIndex].text;

                    row.style.display = (departmentMatch && roleMatch) ? '' : 'none';
                }
            }

            departmentFilter.addEventListener('change', filterTable);
            roleFilter.addEventListener('change', filterTable);
        });
    </script>

</body>

</html>